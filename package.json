{
  "name": "@honga/repo",
  "version": "1.0.0",
  "description": "AI-powered Git commit analyzer and rewriter with conventional commit standards support",
  "main": "dist/commit-analyzer.js",
  "bin": {
    "git-commit-analyzer": "dist/commit-analyzer.js",
    "gca": "dist/commit-analyzer.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CONVENTIONAL_COMMITS_GUIDE.md",
    "LICENSE",
    ".env.example"
  ],
  "scripts": {
    "build": "tsc",
    "start": "ts-node commit-analyzer.ts ../cline",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "lint:knip": "knip",
    "check": "npm run lint && npm run lint:knip"
  },
  "keywords": [
    "git",
    "commit",
    "conventional-commits",
    "analysis",
    "rewrite",
    "ai",
    "openrouter",
    "cli",
    "typescript",
    "commit-analyzer"
  ],
  "author": "honga",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/honga/git-commit-categories.git"
  },
  "homepage": "https://github.com/honga/git-commit-categories#readme",
  "bugs": {
    "url": "https://github.com/honga/git-commit-categories/issues"
  },
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.5.0",
    "tiktoken": "^1.0.21"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "knip": "^5.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}